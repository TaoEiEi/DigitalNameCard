@model DigitalNamecard.Models.NamecardModel

@{
    ViewData["Title"] = "Create Namecard";
}

<div class="container mx-auto px-4 py-8 max-w-4xl">
    <a asp-controller="Home" asp-action="Index" class="d-flex align-items-center small mb-6 text-decoration-hover">
        <i class="bi bi-arrow-left me-1"></i>
        Back to Dashboard
    </a>

    <h1 class="fs-1 fw-bold mb-6">Create Your Digital Namecard</h1>

    <ul class="nav nav-tabs mb-4" id="namecardTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="edit-tab" data-bs-toggle="tab" data-bs-target="#edit" type="button" role="tab" aria-controls="edit" aria-selected="true">Edit</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="preview-tab" data-bs-toggle="tab" data-bs-target="#preview" type="button" role="tab" aria-controls="preview" aria-selected="false">Preview</button>
        </li>
    </ul>

    <div class="tab-content" id="namecardTabsContent">
        <div class="tab-pane fade show active" id="edit" role="tabpanel" aria-labelledby="edit-tab">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title">Personal Information</h5>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label asp-for="FullName" class="form-label"></label>
                                    <input asp-for="FullName" class="form-control" placeholder="John Doe" />
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="JobTitle" class="form-label"></label>
                                    <input asp-for="JobTitle" class="form-control" placeholder="Software Developer" />
                                    <span asp-validation-for="JobTitle" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Company" class="form-label"></label>
                                    <input asp-for="Company" class="form-control" placeholder="Tech Solutions Inc." />
                                    <span asp-validation-for="Company" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Bio" class="form-label"></label>
                                    <textarea asp-for="Bio" class="form-control" rows="4" placeholder="A brief description about yourself"></textarea>
                                    <span asp-validation-for="Bio" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="ProfileImageUrl" class="form-label">Profile Image</label>
                                    <input asp-for="ProfileImageUrl" type="file" class="form-control" accept="image/*" id="profileImageInput" />
                                    <span asp-validation-for="ProfileImageUrl" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="LogoUrl" class="form-label">Logo Image</label>
                                    <input asp-for="LogoUrl" type="file" class="form-control" accept="image/*" id="logoImageInput" />
                                    <span asp-validation-for="LogoUrl" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title">Contact Information</h5>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label"></label>
                                    <input asp-for="Email" class="form-control" type="email" placeholder="john.doe@example.com" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Phone" class="form-label"></label>
                                    <input asp-for="Phone" class="form-control" type="tel" placeholder="+1 (555) 123-4567" />
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Fax" class="form-label"></label>
                                    <input asp-for="Fax" class="form-control" type="tel" placeholder="+1 (555) 123-4568" />
                                    <span asp-validation-for="Fax" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Mobile" class="form-label"></label>
                                    <input asp-for="Mobile" class="form-control" type="tel" placeholder="+1 (555) 987-6543" />
                                    <span asp-validation-for="Mobile" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Website" class="form-label"></label>
                                    <input asp-for="Website" class="form-control" type="url" placeholder="https://example.com" />
                                    <span asp-validation-for="Website" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Address" class="form-label"></label>
                                    <input asp-for="Address" class="form-control" placeholder="123 Main St, City, Country" />
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Social Media</label>
                                    <div class="row g-2">
                                        <div class="col-6">
                                            <button type="button" class="btn btn-outline-secondary w-100 text-start" id="addFacebook">
                                                <i class="bi bi-facebook me-2"></i>
                                                Add Facebook
                                            </button>
                                        </div>
                                        <div class="col-6">
                                            <button type="button" class="btn btn-outline-secondary w-100 text-start" id="addTwitter">
                                                <i class="bi bi-twitter me-2"></i>
                                                Add Twitter
                                            </button>
                                        </div>
                                        <div class="col-6">
                                            <button type="button" class="btn btn-outline-secondary w-100 text-start" id="addLinkedIn">
                                                <i class="bi bi-linkedin me-2"></i>
                                                Add LinkedIn
                                            </button>
                                        </div>
                                        <div class="col-6">
                                            <button type="button" class="btn btn-outline-secondary w-100 text-start" id="addGitHub">
                                                <i class="bi bi-github me-2"></i>
                                                Add GitHub
                                            </button>
                                        </div>
                                    </div>
                                    <div id="socialLinksContainer" class="mt-3">
                                        <!-- Social links will be added here dynamically -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mt-4 d-flex justify-content-end gap-2">
                    <button type="button" class="btn btn-outline-secondary" id="previewBtn">
                        <i class="bi bi-eye me-2"></i>
                        Preview
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save me-2"></i>
                        Save Namecard
                    </button>
                </div>
            </form>
        </div>

        <div class="tab-pane fade" id="preview" role="tabpanel" aria-labelledby="preview-tab">
            <div class="d-flex justify-content-center p-4 bg-light rounded">
                <div class="card w-100 max-w-md overflow-hidden">
                    <div class="card-header bg-primary text-white p-6">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h5 class="card-title fs-4" id="previewName">Your Name</h5>
                                <p class="text-white-50 mt-1" id="previewJobTitle">Job Title</p>
                                <p class="text-white-50 small mt-1" id="previewCompany"></p>
                            </div>
                            <div class="rounded-circle bg-white-20 d-flex align-items-center justify-content-center fs-4 fw-bold" style="width: 4rem; height: 4rem;" id="previewInitials">
                                YN
                            </div>
                        </div>
                    </div>
                    <div class="card-body p-6">
                        <div id="previewBioContainer" class="mb-4 pb-4 border-bottom d-none">
                            <p id="previewBio"></p>
                        </div>
                        <div class="d-flex flex-column gap-3">
                            <div id="previewEmailContainer" class="d-none">
                                <p class="small text-muted">Email</p>
                                <p id="previewEmail"></p>
                            </div>
                            <div id="previewPhoneContainer" class="d-none">
                                <p class="small text-muted">Phone</p>
                                <p id="previewPhone"></p>
                            </div>
                            <div id="previewFaxContainer" class="d-none">
                                <p class="small text-muted">Fax</p>
                                <p id="previewFax"></p>
                            </div>
                            <div id="previewMobileContainer" class="d-none">
                                <p class="small text-muted">Mobile</p>
                                <p id="previewMobile"></p>
                            </div>
                            <div id="previewWebsiteContainer" class="d-none">
                                <p class="small text-muted">Website</p>
                                <p id="previewWebsite"></p>
                            </div>
                            <div id="previewAddressContainer" class="d-none">
                                <p class="small text-muted">Address</p>
                                <p id="previewAddress"></p>
                            </div>
                            <div id="previewProfileImageContainer" class="d-none">
                                <img id="previewProfileImage" alt="Profile Image" style="max-width: 100px; border-radius: 50%;" />
                            </div>
                            <div id="previewLogoImageContainer" class="d-none">
                                <img id="previewLogoImage" alt="Logo Image" style="max-width: 100px;" />
                            </div>
                        </div>
                        <div id="previewSocialLinks" class="mt-3"></div>
                    </div>
                    <div class="card-footer bg-light p-4 d-flex justify-content-between">
                        <button class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-qr-code me-2"></i>
                            QR Code
                        </button>
                        <button class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-share me-2"></i>
                            Share
                        </button>
                    </div>
                </div>
            </div>

            <div class="mt-4 d-flex justify-content-end">
                <button type="button" class="btn btn-primary" id="continueEditingBtn">
                    Continue Editing
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <script>
            $(document).ready(function() {
                // Preview button click
                $("#previewBtn").click(function() {
                    $("#preview-tab").tab("show");
                    updatePreview();
                });

                // Continue editing button click
                $("#continueEditingBtn").click(function() {
                    $("#edit-tab").tab("show");
                });

                // Update preview when inputs change
                $("input, textarea, #profileImageInput, #logoImageInput").on("change", function() {
                    updatePreview();
                });

                // Social media buttons
                $("#addFacebook").click(function() { addSocialLink("Facebook"); });
                $("#addTwitter").click(function() { addSocialLink("Twitter"); });
                $("#addLinkedIn").click(function() { addSocialLink("LinkedIn"); });
                $("#addGitHub").click(function() { addSocialLink("GitHub"); });

                // Function to update preview
                function updatePreview() {
                    // Update name and initials
                    const fullName = $("#FullName").val() || "Your Name";
                    $("#previewName").text(fullName);

                    // Generate initials
                    const initials = fullName.split(' ')
                        .map(n => n[0])
                        .join('')
                        .substring(0, 2)
                        .toUpperCase() || "YN";
                    $("#previewInitials").text(initials);

                    // Update job title
                    const jobTitle = $("#JobTitle").val() || "Job Title";
                    $("#previewJobTitle").text(jobTitle);

                    // Update company
                    const company = $("#Company").val();
                    if (company) {
                        $("#previewCompany").text(company).parent().show();
                    } else {
                        $("#previewCompany").parent().hide();
                    }

                    // Update bio
                    const bio = $("#Bio").val();
                    if (bio) {
                        $("#previewBio").text(bio);
                        $("#previewBioContainer").removeClass("d-none");
                    } else {
                        $("#previewBioContainer").addClass("d-none");
                    }

                    // Update contact info
                    updateContactField("Email", "email");
                    updateContactField("Phone", "phone");
                    updateContactField("Fax", "fax");
                    updateContactField("Mobile", "mobile");
                    updateContactField("Website", "website");
                    updateContactField("Address", "address");

                    // Update profile image
                    const profileImageInput = $("#profileImageInput")[0];
                    if (profileImageInput.files && profileImageInput.files[0]) {
                        const reader = new FileReader();
                        reader.onload = function(e) {
                            $("#previewProfileImage").attr("src", e.target.result);
                            $("#previewProfileImageContainer").removeClass("d-none");
                        };
                        reader.readAsDataURL(profileImageInput.files[0]);
                    } else {
                        $("#previewProfileImageContainer").addClass("d-none");
                    }

                    // Update logo image
                    const logoImageInput = $("#logoImageInput")[0];
                    if (logoImageInput.files && logoImageInput.files[0]) {
                        const reader = new FileReader();
                        reader.onload = function(e) {
                            $("#previewLogoImage").attr("src", e.target.result);
                            $("#previewLogoImageContainer").removeClass("d-none");
                        };
                        reader.readAsDataURL(logoImageInput.files[0]);
                    } else {
                        $("#previewLogoImageContainer").addClass("d-none");
                    }
                }

                // Helper function to update contact fields
                function updateContactField(field, fieldLower) {
                    const value = $(`#${field}`).val();
                    if (value) {
                        $(`#preview${field}`).text(value);
                        $(`#preview${field}Container`).removeClass("d-none");
                    } else {
                        $(`#preview${field}Container`).addClass("d-none");
                    }
                }

                // Function to add social link
                function addSocialLink(platform) {
                    const linkId = Date.now();
                    const html = `
                        <div class="input-group mb-2" id="social-${linkId}">
                            <span class="input-group-text">
                                <i class="bi bi-${platform.toLowerCase()}"></i>
                            </span>
                            <input type="hidden" name="SocialLinks[${linkId}].Platform" value="${platform}">
                            <input type="url" class="form-control" name="SocialLinks[${linkId}].Url" placeholder="${platform} URL">
                            <button type="button" class="btn btn-outline-danger" onclick="removeSocialLink('social-${linkId}')">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    `;
                    $("#socialLinksContainer").append(html);
                    updatePreview(); // Update preview after adding social link
                }

                // Make removeSocialLink global
                window.removeSocialLink = function(id) {
                    $(`#${id}`).remove();
                    updatePreview(); // Update preview after removing social link
                };

                // Initialize preview
                updatePreview();
            });
        </script>
}